# Environment Configuration for Rive MCP Server

# Node Environment
NODE_ENV=development

# Storage Backend Selection (local, s3, remote)
STORAGE_BACKEND=local

# ========================================
# Local Storage Configuration
# ========================================
LOCAL_BASE_PATH=./data
LOCAL_MANIFEST_PATH=manifests
LOCAL_ASSETS_PATH=assets
LOCAL_CACHE_PATH=.cache

# ========================================
# S3 Storage Configuration
# ========================================
# S3_BUCKET=my-rive-bucket
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your-access-key-id
# S3_SECRET_ACCESS_KEY=your-secret-access-key
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_MANIFEST_PREFIX=manifests
# S3_ASSETS_PREFIX=assets

# ========================================
# Remote Storage Configuration
# ========================================
# REMOTE_MANIFEST_URL=https://example.com/manifests
# REMOTE_ASSET_BASE_URL=https://example.com/assets
# REMOTE_TIMEOUT=30000

# ========================================
# Rive Runtime Configuration
# ========================================
RIVE_RUNTIME_VERSION=latest

# ========================================
# Indexing Configuration
# ========================================
AUTO_INDEX=true
INDEX_INTERVAL=60000
ENABLE_CACHE=true
CACHE_TTL=300

# ========================================
# Server Configuration
# ========================================
SERVER_NAME=astralismotion-rive-mcp
SERVER_VERSION=0.1.0
SERVER_PORT=3000

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=info
LOG_FORMAT=text
