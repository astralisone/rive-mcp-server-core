{
  "id": "ui-loading-spinner",
  "name": "Premium Loading Spinner",
  "description": "An elegant, customizable loading spinner with multiple style variations",
  "version": "1.2.0",
  "libraryId": "ui-components",
  "riveFile": "/rive/ui/loading-spinner.riv",
  "thumbnailUrl": "https://cdn.astralis.com/thumbnails/loading-spinner.png",
  "tags": ["ui", "loading", "spinner", "indicator"],
  "category": "ui-elements",
  "author": "UI Team",
  "createdAt": "2025-01-10T08:30:00Z",
  "updatedAt": "2025-01-20T14:45:00Z",
  "stateMachines": [
    {
      "name": "LoadingStateMachine",
      "description": "Controls loading spinner behavior and appearance",
      "inputs": [
        {
          "name": "isLoading",
          "type": "bool",
          "defaultValue": true,
          "description": "Shows or hides the loading animation"
        },
        {
          "name": "progress",
          "type": "number",
          "defaultValue": 0,
          "min": 0,
          "max": 100,
          "description": "Progress percentage for determinate loading (0-100)"
        },
        {
          "name": "speed",
          "type": "number",
          "defaultValue": 1.0,
          "min": 0.1,
          "max": 3.0,
          "description": "Animation speed multiplier"
        },
        {
          "name": "styleIndex",
          "type": "number",
          "defaultValue": 0,
          "min": 0,
          "max": 4,
          "description": "Index of the style variant (0: default, 1: minimal, 2: bold, 3: neon, 4: retro)"
        },
        {
          "name": "complete",
          "type": "trigger",
          "description": "Triggers the completion animation"
        }
      ],
      "events": [
        {
          "name": "LoadingStarted",
          "description": "Fired when loading animation begins",
          "eventType": "state"
        },
        {
          "name": "LoadingComplete",
          "description": "Fired when loading completes and animation finishes",
          "eventType": "state"
        }
      ]
    }
  ],
  "artboards": ["Spinner", "ProgressBar"],
  "recommendedFrameworks": ["react", "vue", "stencil", "angular"],
  "runtimeVersion": "web-v2",
  "storageBackend": "local",
  "storagePath": "components/ui/loading-spinner"
}
