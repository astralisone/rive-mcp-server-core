{
  "componentId": "astralis-slot-machine",
  "runtimeVersion": "web-v2",
  "surface": {
    "stateMachines": [
      {
        "name": "SlotMachineSM",
        "inputs": [
          {
            "name": "isSpinning",
            "type": "bool",
            "value": false
          },
          {
            "name": "spinSpeed",
            "type": "number",
            "value": 1.0
          },
          {
            "name": "winAmount",
            "type": "number",
            "value": 0
          }
        ],
        "triggers": [
          {
            "name": "triggerSpin",
            "description": "Initiates a new spin"
          },
          {
            "name": "stopReels",
            "description": "Stops the reels"
          }
        ],
        "events": [
          {
            "name": "SpinStarted",
            "handler": "onSpinStarted"
          },
          {
            "name": "SpinComplete",
            "handler": "onSpinComplete"
          },
          {
            "name": "WinSequenceComplete",
            "handler": "onWinComplete"
          },
          {
            "name": "ReelStopped",
            "handler": "onReelStopped"
          }
        ]
      }
    ],
    "dataBindings": [
      {
        "name": "reelSymbols",
        "value": [
          { "symbol": "cherry", "index": 0 },
          { "symbol": "lemon", "index": 1 },
          { "symbol": "orange", "index": 2 },
          { "symbol": "plum", "index": 3 },
          { "symbol": "bell", "index": 4 },
          { "symbol": "bar", "index": 5 },
          { "symbol": "seven", "index": 6 },
          { "symbol": "diamond", "index": 7 }
        ]
      },
      {
        "name": "payoutTable",
        "value": {
          "three_cherries": 10,
          "three_lemons": 20,
          "three_oranges": 30,
          "three_plums": 40,
          "three_bells": 100,
          "three_bars": 250,
          "three_sevens": 500,
          "three_diamonds": 1000
        }
      }
    ]
  },
  "integrationCode": {
    "react": "SlotMachineComponent",
    "vue": "SlotMachineVue",
    "stencil": "slot-machine"
  }
}
