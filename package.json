{
  "name": "astralismotion-rive-mcp",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "nx serve demo",
    "dev:web": "nx serve web",
    "dev:dashboard": "nx serve dashboard",
    "build": "nx run-many --target=build --all",
    "build:affected": "nx affected --target=build",
    "build:libs": "nx run-many --target=build --projects=tag:type:lib",
    "build:packages": "nx run-many --target=build --projects=tag:type:package",
    "build:apps": "nx run-many --target=build --projects=tag:type:app",
    "test": "nx run-many --target=test --all",
    "test:affected": "nx affected --target=test",
    "test:watch": "nx run-many --target=test --all --watch",
    "typecheck": "nx run-many --target=typecheck --all",
    "lint": "nx run-many --target=lint --all",
    "format": "prettier --write .",
    "graph": "nx graph",
    "clean": "nx reset && rm -rf dist node_modules/.cache",
    "init-storage": "ts-node tools/scripts/init-storage.ts",
    "seed-manifests": "ts-node tools/scripts/seed-manifests.ts",
    "validate-setup": "ts-node tools/scripts/validate-setup.ts",
    "generate-manifest": "ts-node tools/scripts/generate-manifest.ts",
    "update-manifest-index": "ts-node tools/scripts/update-manifest-index.ts",
    "validate-manifests": "ts-node tools/scripts/validate-manifests.ts",
    "batch-import": "ts-node tools/scripts/batch-import.ts",
    "mcp-server": "node packages/mcp-server/dist/index.js",
    "mcp-config": "node packages/mcp-server/dist/index.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.523.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@rive-app/canvas": "^2.9.0",
    "@rive-app/react-canvas": "^4.5.0",
    "@stencil/core": "^4.7.0",
    "commander": "^11.1.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@nx/jest": "^18.0.0",
    "@nx/js": "^18.0.0",
    "@nx/node": "^18.0.0",
    "@nx/react": "^18.0.0",
    "@nx/webpack": "^18.0.0",
    "@nx/workspace": "^18.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nx": "^18.0.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  }
}
