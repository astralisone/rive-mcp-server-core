{
  "examples": [
    {
      "name": "Simple Timeline Scene",
      "description": "Basic timeline-based orchestration of multiple animations",
      "spec": {
        "id": "timeline-intro",
        "name": "Introduction Timeline",
        "description": "A simple scene that sequences logo and text animations",
        "version": "1.0.0",
        "viewport": {
          "width": 1920,
          "height": 1080,
          "unit": "px"
        },
        "components": [
          {
            "id": "logo-comp",
            "name": "logo",
            "componentId": "brand-logo",
            "transform": {
              "position": { "x": 960, "y": 400, "z": 0 },
              "scale": { "x": 1, "y": 1 },
              "opacity": 0
            },
            "zIndex": 10
          },
          {
            "id": "tagline-comp",
            "name": "tagline",
            "componentId": "brand-tagline",
            "transform": {
              "position": { "x": 960, "y": 680, "z": 0 },
              "scale": { "x": 1, "y": 1 },
              "opacity": 0
            },
            "zIndex": 5
          }
        ],
        "timeline": {
          "duration": 3000,
          "loop": false,
          "tracks": [
            {
              "componentName": "logo",
              "keyframes": [
                {
                  "time": 0,
                  "property": "transform.opacity",
                  "value": 0,
                  "easing": "ease-out"
                },
                {
                  "time": 500,
                  "property": "transform.opacity",
                  "value": 1,
                  "easing": "ease-out"
                },
                {
                  "time": 0,
                  "property": "transform.scale.x",
                  "value": 0.5,
                  "easing": "cubic-bezier(0.33, 1, 0.68, 1)"
                },
                {
                  "time": 0,
                  "property": "transform.scale.y",
                  "value": 0.5,
                  "easing": "cubic-bezier(0.33, 1, 0.68, 1)"
                },
                {
                  "time": 800,
                  "property": "transform.scale.x",
                  "value": 1,
                  "easing": "cubic-bezier(0.33, 1, 0.68, 1)"
                },
                {
                  "time": 800,
                  "property": "transform.scale.y",
                  "value": 1,
                  "easing": "cubic-bezier(0.33, 1, 0.68, 1)"
                }
              ]
            },
            {
              "componentName": "tagline",
              "keyframes": [
                {
                  "time": 800,
                  "property": "transform.opacity",
                  "value": 0,
                  "easing": "ease-out"
                },
                {
                  "time": 1500,
                  "property": "transform.opacity",
                  "value": 1,
                  "easing": "ease-out"
                },
                {
                  "time": 800,
                  "property": "transform.position.y",
                  "value": 720,
                  "easing": "ease-out"
                },
                {
                  "time": 1500,
                  "property": "transform.position.y",
                  "value": 680,
                  "easing": "ease-out"
                }
              ]
            }
          ]
        }
      }
    },
    {
      "name": "Event-Driven Scene",
      "description": "Components that trigger each other through events",
      "spec": {
        "id": "jackpot-celebration",
        "name": "Jackpot Win Celebration",
        "description": "Multi-stage celebration triggered by jackpot win",
        "version": "1.0.0",
        "viewport": {
          "width": 1280,
          "height": 720,
          "unit": "px"
        },
        "components": [
          {
            "id": "coins-comp",
            "name": "coins",
            "componentId": "coin-burst",
            "transform": {
              "position": { "x": 640, "y": 360, "z": 0 }
            },
            "zIndex": 10
          },
          {
            "id": "confetti-comp",
            "name": "confetti",
            "componentId": "confetti-explosion",
            "transform": {
              "position": { "x": 640, "y": 0, "z": 0 }
            },
            "zIndex": 5
          },
          {
            "id": "banner-comp",
            "name": "banner",
            "componentId": "win-banner",
            "transform": {
              "position": { "x": 640, "y": 360, "z": 0 },
              "opacity": 0
            },
            "zIndex": 15
          }
        ],
        "eventConnections": [
          {
            "source": {
              "componentName": "coins",
              "eventName": "burstComplete"
            },
            "target": {
              "componentName": "confetti",
              "action": "trigger",
              "parameter": "explode"
            },
            "delay": 200
          },
          {
            "source": {
              "componentName": "confetti",
              "eventName": "explosionPeak"
            },
            "target": {
              "componentName": "banner",
              "action": "trigger",
              "parameter": "show"
            },
            "delay": 0
          }
        ],
        "inputs": [
          {
            "name": "winAmount",
            "type": "number",
            "description": "The jackpot amount won",
            "validation": {
              "min": 0,
              "required": true
            }
          }
        ],
        "events": [
          {
            "name": "celebrationComplete",
            "description": "Fired when the entire celebration sequence finishes"
          }
        ]
      }
    },
    {
      "name": "State Machine Scene",
      "description": "Scene controlled by explicit states and transitions",
      "spec": {
        "id": "slot-game-states",
        "name": "Slot Machine Game States",
        "description": "State-driven slot machine with idle, spinning, and win states",
        "version": "1.0.0",
        "viewport": {
          "width": 800,
          "height": 600,
          "unit": "px"
        },
        "components": [
          {
            "id": "reel1-comp",
            "name": "reel1",
            "componentId": "slot-reel",
            "transform": {
              "position": { "x": 200, "y": 300, "z": 0 }
            },
            "zIndex": 10
          },
          {
            "id": "reel2-comp",
            "name": "reel2",
            "componentId": "slot-reel",
            "transform": {
              "position": { "x": 400, "y": 300, "z": 0 }
            },
            "zIndex": 10
          },
          {
            "id": "reel3-comp",
            "name": "reel3",
            "componentId": "slot-reel",
            "transform": {
              "position": { "x": 600, "y": 300, "z": 0 }
            },
            "zIndex": 10
          },
          {
            "id": "glow-comp",
            "name": "winGlow",
            "componentId": "win-glow-effect",
            "transform": {
              "position": { "x": 400, "y": 300, "z": 0 },
              "opacity": 0
            },
            "zIndex": 5
          }
        ],
        "states": [
          {
            "name": "idle",
            "description": "Waiting for player action",
            "componentStates": [
              {
                "componentName": "reel1",
                "stateMachine": "reelController",
                "state": "idle"
              },
              {
                "componentName": "reel2",
                "stateMachine": "reelController",
                "state": "idle"
              },
              {
                "componentName": "reel3",
                "stateMachine": "reelController",
                "state": "idle"
              },
              {
                "componentName": "winGlow",
                "transform": {
                  "opacity": 0
                }
              }
            ]
          },
          {
            "name": "spinning",
            "description": "Reels are spinning",
            "componentStates": [
              {
                "componentName": "reel1",
                "stateMachine": "reelController",
                "state": "spinning"
              },
              {
                "componentName": "reel2",
                "stateMachine": "reelController",
                "state": "spinning"
              },
              {
                "componentName": "reel3",
                "stateMachine": "reelController",
                "state": "spinning"
              },
              {
                "componentName": "winGlow",
                "transform": {
                  "opacity": 0
                }
              }
            ]
          },
          {
            "name": "win",
            "description": "Showing win celebration",
            "componentStates": [
              {
                "componentName": "reel1",
                "stateMachine": "reelController",
                "state": "celebrate"
              },
              {
                "componentName": "reel2",
                "stateMachine": "reelController",
                "state": "celebrate"
              },
              {
                "componentName": "reel3",
                "stateMachine": "reelController",
                "state": "celebrate"
              },
              {
                "componentName": "winGlow",
                "transform": {
                  "opacity": 1
                }
              }
            ]
          }
        ],
        "transitions": [
          {
            "from": "idle",
            "to": "spinning",
            "duration": 300,
            "easing": "ease-out"
          },
          {
            "from": "spinning",
            "to": "idle",
            "duration": 500,
            "easing": "ease-in-out"
          },
          {
            "from": "spinning",
            "to": "win",
            "duration": 800,
            "easing": "ease-out",
            "animations": [
              {
                "componentName": "winGlow",
                "property": "transform.opacity",
                "from": 0,
                "to": 1
              }
            ]
          },
          {
            "from": "win",
            "to": "idle",
            "duration": 1000,
            "easing": "ease-in",
            "animations": [
              {
                "componentName": "winGlow",
                "property": "transform.opacity",
                "from": 1,
                "to": 0
              }
            ]
          }
        ],
        "initialState": "idle",
        "inputs": [
          {
            "name": "spinTrigger",
            "type": "boolean",
            "description": "Trigger a spin"
          },
          {
            "name": "isWin",
            "type": "boolean",
            "description": "Whether the spin resulted in a win"
          }
        ]
      }
    },
    {
      "name": "Hybrid Orchestration",
      "description": "Complex scene using timeline, states, and events together",
      "spec": {
        "id": "onboarding-flow",
        "name": "Interactive Onboarding Flow",
        "description": "Multi-step onboarding with timeline animations and state-based progression",
        "version": "1.0.0",
        "viewport": {
          "width": 1024,
          "height": 768,
          "unit": "px"
        },
        "components": [
          {
            "id": "bg-comp",
            "name": "background",
            "componentId": "gradient-background",
            "transform": {
              "position": { "x": 512, "y": 384, "z": 0 }
            },
            "zIndex": 1
          },
          {
            "id": "step1-comp",
            "name": "step1",
            "componentId": "onboarding-step",
            "transform": {
              "position": { "x": 512, "y": 384, "z": 0 },
              "opacity": 0
            },
            "zIndex": 10,
            "visible": true
          },
          {
            "id": "step2-comp",
            "name": "step2",
            "componentId": "onboarding-step",
            "transform": {
              "position": { "x": 512, "y": 384, "z": 0 },
              "opacity": 0
            },
            "zIndex": 10,
            "visible": false
          },
          {
            "id": "step3-comp",
            "name": "step3",
            "componentId": "onboarding-step",
            "transform": {
              "position": { "x": 512, "y": 384, "z": 0 },
              "opacity": 0
            },
            "zIndex": 10,
            "visible": false
          },
          {
            "id": "nav-comp",
            "name": "navigation",
            "componentId": "step-navigation",
            "transform": {
              "position": { "x": 512, "y": 700, "z": 0 }
            },
            "zIndex": 20
          }
        ],
        "timeline": {
          "duration": 1000,
          "loop": false,
          "tracks": [
            {
              "componentName": "step1",
              "keyframes": [
                {
                  "time": 0,
                  "property": "transform.opacity",
                  "value": 0,
                  "easing": "ease-in-out"
                },
                {
                  "time": 500,
                  "property": "transform.opacity",
                  "value": 1,
                  "easing": "ease-in-out"
                },
                {
                  "time": 0,
                  "property": "transform.position.y",
                  "value": 424,
                  "easing": "ease-out"
                },
                {
                  "time": 500,
                  "property": "transform.position.y",
                  "value": 384,
                  "easing": "ease-out"
                }
              ]
            }
          ]
        },
        "states": [
          {
            "name": "step1Active",
            "componentStates": [
              {
                "componentName": "step1",
                "inputs": { "active": true },
                "transform": { "opacity": 1 }
              },
              {
                "componentName": "step2",
                "transform": { "opacity": 0 }
              },
              {
                "componentName": "step3",
                "transform": { "opacity": 0 }
              },
              {
                "componentName": "navigation",
                "inputs": { "currentStep": 1 }
              }
            ]
          },
          {
            "name": "step2Active",
            "componentStates": [
              {
                "componentName": "step1",
                "transform": { "opacity": 0 }
              },
              {
                "componentName": "step2",
                "inputs": { "active": true },
                "transform": { "opacity": 1 }
              },
              {
                "componentName": "step3",
                "transform": { "opacity": 0 }
              },
              {
                "componentName": "navigation",
                "inputs": { "currentStep": 2 }
              }
            ]
          },
          {
            "name": "step3Active",
            "componentStates": [
              {
                "componentName": "step1",
                "transform": { "opacity": 0 }
              },
              {
                "componentName": "step2",
                "transform": { "opacity": 0 }
              },
              {
                "componentName": "step3",
                "inputs": { "active": true },
                "transform": { "opacity": 1 }
              },
              {
                "componentName": "navigation",
                "inputs": { "currentStep": 3 }
              }
            ]
          }
        ],
        "transitions": [
          {
            "from": "*",
            "to": "step1Active",
            "duration": 500,
            "easing": "ease-in-out"
          },
          {
            "from": "*",
            "to": "step2Active",
            "duration": 500,
            "easing": "ease-in-out"
          },
          {
            "from": "*",
            "to": "step3Active",
            "duration": 500,
            "easing": "ease-in-out"
          }
        ],
        "initialState": "step1Active",
        "eventConnections": [
          {
            "source": {
              "componentName": "navigation",
              "eventName": "nextClicked"
            },
            "target": {
              "componentName": "step1",
              "action": "trigger",
              "parameter": "exit"
            }
          }
        ],
        "inputs": [
          {
            "name": "userName",
            "type": "string",
            "description": "User's name for personalization"
          },
          {
            "name": "currentStep",
            "type": "number",
            "description": "Current onboarding step",
            "defaultValue": 1,
            "validation": {
              "min": 1,
              "max": 3,
              "required": true
            }
          }
        ],
        "events": [
          {
            "name": "onboardingComplete",
            "description": "User completed all onboarding steps"
          },
          {
            "name": "stepChanged",
            "description": "User moved to a different step",
            "payload": {
              "fromStep": "number",
              "toStep": "number"
            }
          }
        ],
        "guidelines": {
          "brand": "AstralisWins",
          "palette": ["#050814", "#F9D976", "#61DAFB"],
          "motionStyle": {
            "duration": "500ms",
            "easing": "cubic-bezier(0.33, 1, 0.68, 1)",
            "keywords": ["smooth", "responsive", "friendly"]
          }
        }
      }
    }
  ]
}
