{
  "id": "game-character-avatar",
  "name": "Game Character Avatar",
  "description": "Animated character avatar with emotions, idle animations, and reactions",
  "version": "1.5.0",
  "libraryId": "astralis-casino",
  "riveFile": "/rive/astralis/character-avatar.riv",
  "thumbnailUrl": "https://cdn.astralis.com/thumbnails/character-avatar.png",
  "previewUrl": "https://cdn.astralis.com/previews/character-avatar.mp4",
  "tags": ["character", "avatar", "animation", "emotion"],
  "category": "game-elements",
  "author": "Character Design Team",
  "createdAt": "2024-11-20T11:00:00Z",
  "updatedAt": "2025-01-22T10:15:00Z",
  "stateMachines": [
    {
      "name": "CharacterSM",
      "description": "Character behavior and emotion system",
      "inputs": [
        {
          "name": "emotionIndex",
          "type": "number",
          "defaultValue": 0,
          "min": 0,
          "max": 7,
          "description": "Emotion to display (0: neutral, 1: happy, 2: sad, 3: excited, 4: angry, 5: surprised, 6: thinking, 7: celebrating)"
        },
        {
          "name": "isTalking",
          "type": "bool",
          "defaultValue": false,
          "description": "Triggers talking animation"
        },
        {
          "name": "lookAtX",
          "type": "number",
          "defaultValue": 0,
          "min": -100,
          "max": 100,
          "description": "Horizontal look direction (-100 to 100)"
        },
        {
          "name": "lookAtY",
          "type": "number",
          "defaultValue": 0,
          "min": -50,
          "max": 50,
          "description": "Vertical look direction (-50 to 50)"
        },
        {
          "name": "triggerReaction",
          "type": "trigger",
          "description": "Triggers a one-shot reaction based on current emotion"
        },
        {
          "name": "wave",
          "type": "trigger",
          "description": "Triggers wave animation"
        }
      ],
      "events": [
        {
          "name": "EmotionChanged",
          "description": "Fired when emotion transition completes",
          "eventType": "state"
        },
        {
          "name": "ReactionComplete",
          "description": "Fired when one-shot reaction animation finishes",
          "eventType": "animation"
        },
        {
          "name": "WaveComplete",
          "description": "Fired when wave animation finishes",
          "eventType": "animation"
        }
      ]
    }
  ],
  "artboards": ["Character", "Eyes", "Mouth", "Accessories"],
  "dataBindings": [
    {
      "name": "characterConfig",
      "type": "object",
      "description": "Character customization options (skin tone, hair style, outfit)",
      "required": false
    },
    {
      "name": "accessories",
      "type": "array",
      "itemSchema": {
        "type": "string",
        "visible": "boolean"
      },
      "description": "List of accessories to show/hide",
      "required": false
    }
  ],
  "recommendedFrameworks": ["react", "vue", "unity", "unreal"],
  "runtimeVersion": "web-v2",
  "storageBackend": "local",
  "storagePath": "components/astralis-casino/character-avatar"
}
